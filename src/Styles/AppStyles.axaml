<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Styles.Resources>
        <!-- Color palette (duplicated here so styles can reference them) -->
        <SolidColorBrush x:Key="BgDarkBrush" Color="#0D0D0F" />
        <SolidColorBrush x:Key="BgPanelBrush" Color="#161619" />
        <SolidColorBrush x:Key="BgCardBrush" Color="#1E1E22" />
        <SolidColorBrush x:Key="BgHoverBrush" Color="#2A2A30" />
        <SolidColorBrush x:Key="BgInputBrush" Color="#222228" />
        <SolidColorBrush x:Key="AccentPurpleBrush" Color="#8B5CF6" />
        <SolidColorBrush x:Key="AccentPurpleHoverBrush" Color="#A78BFA" />
        <SolidColorBrush x:Key="AccentPurpleDimBrush" Color="#6D28D9" />
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#E4E4E7" />
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#A1A1AA" />
        <SolidColorBrush x:Key="TextMutedBrush" Color="#71717A" />
        <SolidColorBrush x:Key="BorderColorBrush" Color="#2E2E35" />
        <SolidColorBrush x:Key="SuccessGreenBrush" Color="#22C55E" />
        <SolidColorBrush x:Key="ErrorRedBrush" Color="#EF4444" />
    </Styles.Resources>

    <!-- Sidebar nav button style -->
    <Style Selector="Button.navBtn">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="Padding" Value="18,14" />
        <Setter Property="Margin" Value="8,2" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>
    <Style Selector="Button.navBtn:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{StaticResource BgHoverBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    </Style>
    <Style Selector="Button.navBtn.active">
        <Setter Property="Background" Value="#1A8B5CF6" />
        <Setter Property="Foreground" Value="{StaticResource AccentPurpleBrush}" />
    </Style>
    <Style Selector="Button.navBtn.active /template/ ContentPresenter">
        <Setter Property="Background" Value="#1A8B5CF6" />
        <Setter Property="Foreground" Value="{StaticResource AccentPurpleBrush}" />
    </Style>

    <!-- Primary action button -->
    <Style Selector="Button.primaryBtn">
        <Setter Property="Background" Value="{StaticResource AccentPurpleBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Padding" Value="24,14" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
    </Style>
    <Style Selector="Button.primaryBtn:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{StaticResource AccentPurpleHoverBrush}" />
    </Style>
    <Style Selector="Button.primaryBtn:disabled /template/ ContentPresenter">
        <Setter Property="Background" Value="{StaticResource AccentPurpleDimBrush}" />
        <Setter Property="Opacity" Value="0.5" />
    </Style>

    <!-- Secondary / browse button -->
    <Style Selector="Button.browseBtn">
        <Setter Property="Background" Value="{StaticResource BgHoverBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderColorBrush}" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>
    <Style Selector="Button.browseBtn:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{StaticResource AccentPurpleDimBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource AccentPurpleBrush}" />
    </Style>

    <!-- TextBox styling -->
    <Style Selector="TextBox.darkInput">
        <Setter Property="Background" Value="{StaticResource BgInputBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderColorBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Padding" Value="14,12" />
        <Setter Property="FontSize" Value="13" />
    </Style>
    <Style Selector="TextBox.darkInput:focus /template/ Border#PART_BorderElement">
        <Setter Property="BorderBrush" Value="{StaticResource AccentPurpleBrush}" />
        <Setter Property="BorderThickness" Value="1.5" />
    </Style>

    <!-- Radio button styling -->
    <Style Selector="RadioButton.optionRadio">
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Margin" Value="0,4" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <!-- Card panel -->
    <Style Selector="Border.card">
        <Setter Property="Background" Value="{StaticResource BgCardBrush}" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="Padding" Value="24" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderColorBrush}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <!-- Section label -->
    <Style Selector="TextBlock.sectionTitle">
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Margin" Value="0,0,0,10" />
    </Style>

    <Style Selector="TextBlock.sectionDesc">
        <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Margin" Value="0,0,0,14" />
    </Style>

    <!-- Status text -->
    <Style Selector="TextBlock.statusText">
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Margin" Value="0,8,0,0" />
    </Style>

</Styles>
