<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:src.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="src.Views.FileWatcherView"
             x:DataType="vm:FileWatcherViewModel">

    <Design.DataContext>
        <vm:FileWatcherViewModel/>
    </Design.DataContext>

    <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                  VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="36,32" Spacing="24" MaxWidth="680">

            <!-- Page Header -->
            <StackPanel Spacing="4">
                <TextBlock Text="File System Watcher" FontSize="26" FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}"/>
                <TextBlock Text="Automatically encrypt new files placed in the watched directory"
                           FontSize="14" Foreground="{StaticResource TextMutedBrush}"/>
            </StackPanel>

            <!-- â•â•â• ALGORITHM â•â•â• -->
            <Border Classes="card">
                <StackPanel Spacing="8">
                    <TextBlock Classes="sectionTitle" Text="ðŸ§® Encryption Algorithm"/>
                    <TextBlock Classes="sectionDesc" Text="Select the algorithm used to encrypt detected files"/>
                    <StackPanel Spacing="8">
                        <Border CornerRadius="10" Padding="12,10"
                                Background="{StaticResource BgInputBrush}"
                                BorderThickness="1" BorderBrush="{StaticResource BorderColorBrush}">
                            <RadioButton GroupName="FswAlgorithm"
                                         IsChecked="{Binding IsA52Selected}"
                                         Classes="optionRadio">
                                <TextBlock Text="A5/2 Stream Cipher"/>
                            </RadioButton>
                        </Border>
                        <Border CornerRadius="10" Padding="12,10"
                                Background="{StaticResource BgInputBrush}"
                                BorderThickness="1" BorderBrush="{StaticResource BorderColorBrush}">
                            <RadioButton GroupName="FswAlgorithm"
                                         IsChecked="{Binding IsSubstitutionSelected}"
                                         Classes="optionRadio">
                                <TextBlock Text="Simple Substitution"/>
                            </RadioButton>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- â•â•â• START / STOP â•â•â• -->
            <Border Classes="card">
                <StackPanel Spacing="12">
                    <TextBlock Classes="sectionTitle" Text="âš¡ Watcher Control"/>

                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Button Classes="primaryBtn"
                                MinWidth="200"
                                Command="{Binding ToggleWatcherCommand}"
                                Content="{Binding ToggleText}"/>

                        <!-- Status indicator -->
                        <Border CornerRadius="20" Padding="14,8" VerticalAlignment="Center"
                                Background="{StaticResource BgInputBrush}"
                                BorderBrush="{StaticResource BorderColorBrush}"
                                BorderThickness="1">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Ellipse Width="10" Height="10" Name="StatusDot"/>
                                <TextBlock Text="{Binding StatusMessage}"
                                           FontSize="12"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- â•â•â• INFO NOTE â•â•â• -->
            <Border CornerRadius="12" Padding="16,14"
                    Background="{StaticResource BgInputBrush}"
                    BorderBrush="{StaticResource BorderColorBrush}"
                    BorderThickness="1">
                <StackPanel Spacing="6">
                    <TextBlock Text="â„¹ï¸  Directory Configuration" FontSize="13" FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="{StaticResource TextMutedBrush}"
                               Text="The Target and Output directories for the watcher are configured in Settings â†’ File System Watcher section. The secret key is also set in Settings."/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
