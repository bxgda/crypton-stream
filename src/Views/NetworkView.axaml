<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:src.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="800"
             x:Class="src.Views.NetworkView"
             x:DataType="vm:NetworkViewModel">

    <Design.DataContext>
        <vm:NetworkViewModel/>
    </Design.DataContext>

    <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                  VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="36,32" Spacing="24" MaxWidth="680">

            <!-- Page Header -->
            <StackPanel Spacing="4">
                <TextBlock Text="Network" FontSize="26" FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}"/>
                <TextBlock Text="Send and receive encrypted files over the network"
                           FontSize="14" Foreground="{StaticResource TextMutedBrush}"/>
            </StackPanel>

            <!-- â•â•â• MY IP ADDRESS â•â•â• -->
            <Border Classes="card">
                <Grid ColumnDefinitions="*,Auto">
                    <StackPanel Spacing="4">
                        <TextBlock Classes="sectionTitle" Text="ðŸ–¥ My IP Address"/>
                        <TextBlock Classes="sectionDesc" Text="Share this address with others so they can send you files"/>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <Border CornerRadius="8" Padding="12,8"
                                    Background="{StaticResource BgInputBrush}"
                                    BorderBrush="{StaticResource AccentPurpleDimBrush}"
                                    BorderThickness="1">
                                <TextBlock Text="{Binding MyIpAddress}" 
                                           FontSize="16" FontWeight="Bold" FontFamily="Consolas,monospace"
                                           Foreground="{StaticResource AccentPurpleHoverBrush}"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- â•â•â• SEND FILE SECTION â•â•â• -->
            <TextBlock Text="SEND" FontSize="11" FontWeight="Bold"
                       Foreground="{StaticResource TextMutedBrush}"
                       LetterSpacing="1.5" Margin="0,8,0,-12"/>

            <!-- Select file to send -->
            <Border Classes="card">
                <StackPanel Spacing="8">
                    <TextBlock Classes="sectionTitle" Text="ðŸ“¤ Send File"/>
                    <TextBlock Classes="sectionDesc" Text="Select a file and the target IP to send an encrypted file"/>

                    <!-- File -->
                    <TextBlock Text="File to send" FontSize="12" FontWeight="Medium"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,2"/>
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBox Grid.Column="0" Classes="darkInput"
                                 Text="{Binding SendFilePath}"
                                 Watermark="No file selected..."
                                 IsReadOnly="True"/>
                        <Button Grid.Column="1" Classes="browseBtn"
                                Content="Browse"
                                Margin="10,0,0,0"
                                Command="{Binding BrowseSendFileCommand}"/>
                    </Grid>

                    <!-- Target IP -->
                    <TextBlock Text="Target IP Address" FontSize="12" FontWeight="Medium"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,12,0,2"/>
                    <TextBox Classes="darkInput"
                             Text="{Binding TargetIpAddress}"
                             Watermark="e.g. 192.168.1.100"/>

                    <!-- Algorithm -->
                    <TextBlock Text="Encryption Algorithm" FontSize="12" FontWeight="Medium"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,12,0,2"/>
                    <StackPanel Spacing="8">
                        <Border CornerRadius="10" Padding="12,10"
                                Background="{StaticResource BgInputBrush}"
                                BorderThickness="1" BorderBrush="{StaticResource BorderColorBrush}">
                            <RadioButton GroupName="NetAlgorithm"
                                         IsChecked="{Binding IsA52Selected}"
                                         Classes="optionRadio">
                                <TextBlock Text="A5/2 Stream Cipher"/>
                            </RadioButton>
                        </Border>
                        <Border CornerRadius="10" Padding="12,10"
                                Background="{StaticResource BgInputBrush}"
                                BorderThickness="1" BorderBrush="{StaticResource BorderColorBrush}">
                            <RadioButton GroupName="NetAlgorithm"
                                         IsChecked="{Binding IsSubstitutionSelected}"
                                         Classes="optionRadio">
                                <TextBlock Text="Simple Substitution"/>
                            </RadioButton>
                        </Border>
                    </StackPanel>

                    <!-- Send button -->
                    <Button Classes="primaryBtn"
                            HorizontalAlignment="Stretch"
                            Margin="0,12,0,0"
                            Command="{Binding SendFileCommand}"
                            IsEnabled="{Binding !IsSending}"
                            Content="ðŸ“¤  Send File"/>

                    <!-- Send status -->
                    <Border IsVisible="{Binding SendStatus, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                            CornerRadius="10" Padding="12,8" Margin="0,4,0,0">
                        <TextBlock Text="{Binding SendStatus}"
                                   HorizontalAlignment="Center"
                                   FontSize="13" FontWeight="Medium"
                                   Name="SendStatusText"/>
                    </Border>
                </StackPanel>
            </Border>

            <!-- â•â•â• LISTEN SECTION â•â•â• -->
            <TextBlock Text="RECEIVE" FontSize="11" FontWeight="Bold"
                       Foreground="{StaticResource TextMutedBrush}"
                       LetterSpacing="1.5" Margin="0,8,0,-12"/>

            <Border Classes="card">
                <StackPanel Spacing="8">
                    <TextBlock Classes="sectionTitle" Text="ðŸ“¥ Receive Files"/>
                    <TextBlock Classes="sectionDesc" 
                               Text="Start the listener to automatically receive and decrypt incoming files"/>

                    <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,4,0,0">
                        <!-- Toggle button -->
                        <Button Classes="primaryBtn"
                                MinWidth="200"
                                Command="{Binding ToggleListeningCommand}"
                                Content="{Binding ListenToggleText}"/>

                        <!-- Status indicator -->
                        <Border CornerRadius="20" Padding="14,8" VerticalAlignment="Center"
                                Background="{StaticResource BgInputBrush}"
                                BorderBrush="{StaticResource BorderColorBrush}"
                                BorderThickness="1">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Ellipse Width="10" Height="10"
                                         Name="StatusDot"/>
                                <TextBlock Text="{Binding ListenStatus}"
                                           FontSize="12"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <TextBlock FontSize="11" Foreground="{StaticResource TextMutedBrush}" Margin="0,8,0,0"
                               TextWrapping="Wrap"
                               Text="Received files are saved to the directory set in Settings. The secret key from Settings is used for decryption."/>
                </StackPanel>
            </Border>

            <Border Height="20"/> <!-- bottom spacer -->

        </StackPanel>
    </ScrollViewer>
</UserControl>
