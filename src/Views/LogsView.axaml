<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:src.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="src.Views.LogsView"
             x:DataType="vm:LogsViewModel">

    <Design.DataContext>
        <vm:LogsViewModel/>
    </Design.DataContext>

    <DockPanel Margin="36,32">

        <!-- Page Header -->
        <StackPanel DockPanel.Dock="Top" Spacing="4" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" Spacing="12">
                <TextBlock Text="Logs" FontSize="26" FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}"/>
                <Border CornerRadius="12" Padding="10,4" VerticalAlignment="Center"
                        Background="{StaticResource AccentPurpleDimBrush}">
                    <TextBlock Text="LIVE" FontSize="10" FontWeight="Bold"
                               Foreground="{StaticResource AccentPurpleBrush}"
                               VerticalAlignment="Center"/>
                </Border>
            </StackPanel>
            <TextBlock Text="Auto-refreshes every 2 seconds â€” showing all log files"
                       FontSize="14" Foreground="{StaticResource TextMutedBrush}"/>
        </StackPanel>

        <!-- Log content area -->
        <Border CornerRadius="12"
                Background="{StaticResource BgCardBrush}"
                BorderBrush="{StaticResource BorderColorBrush}"
                BorderThickness="1"
                Padding="0">
            <ScrollViewer Name="LogScrollViewer"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <TextBlock Text="{Binding LogContent}"
                           FontFamily="Cascadia Code, Consolas, Courier New, monospace"
                           FontSize="12"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Padding="20,16"
                           TextWrapping="NoWrap"/>
            </ScrollViewer>
        </Border>

    </DockPanel>
</UserControl>
